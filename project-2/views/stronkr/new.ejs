<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <input type="text" name="airline">
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">Australia</option>
    <option value="DFW">Dallas/Fortworth</option>
    <option value="DEN" selected>Denmark</option>
    <option value="LAX">Los Angeles</option>
    <option value="SAN">San Francisco</option>
    </select>
  <label for="flightNo">Flight No.</label>
  <input type="text" name="flightNo">
  <label for="departs">Departs:</label>
  <input id="departs" type="datetime-local" name="departs" value="<%= departsDate %>">
  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>
